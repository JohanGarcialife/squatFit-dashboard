    return;

    // C√≥digo comentado para evitar llamadas a la API
    /*
    try {
      console.log('üîÑ ChatContext: Actualizando conversaci√≥n espec√≠fica:', chatId);

      // Obtener conversaciones actualizadas
      const updatedConversations = await ChatService.getConversations();

      // Encontrar la conversaci√≥n espec√≠fica
