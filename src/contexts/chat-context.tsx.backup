      if (updatedConv) {
        // Actualizar solo esa conversaci√≥n en el estado
        setConversations(prev => {
          return prev.map(conv => {
            if (conv.id === chatId) {
              return {
                ...conv,
                ...updatedConv,
                // Mantener el estado local si es necesario
                unread: updatedConv.unread || conv.unread + 1
              };
            }
            return conv;
          });
        });

        console.log('‚úÖ ChatContext: Conversaci√≥n actualizada:', chatId);
      }
    } catch (error) {
      console.error('‚ùå ChatContext: Error actualizando conversaci√≥n espec√≠fica:', error);
    }
    */
  }, []);

  /**
   * Funci√≥n para manejar notificaciones del WebSocket (DIRECTA)
   */
  const handleWebSocketNotification = useCallback(
    async (notification: any) => {
      console.log("üîî ChatContext: Procesando notificaci√≥n WebSocket:", notification);

    if (notification.type === 'new_message') {
        const { chatId, message, userId, timestamp, coachId } = notification.data;

      console.log('üì® ChatContext: Nuevo mensaje recibido:', {
          chatId,
          message: message?.substring(0, 50) + "...",
          userId,
          coachId,
          timestamp,
        });

      // Obtener el ID del usuario actual para determinar si el mensaje es del usuario actual
        const currentUserId = getCurrentUserId();
        const isFromCurrentUser = userId === currentUserId;

      console.log('üîç ChatContext: Identificaci√≥n del emisor:', {
          messageUserId: userId,
          currentUserId: currentUserId,
          isFromCurrentUser: isFromCurrentUser,
        });

      // 1. Actualizar contador de no le√≠dos y √∫ltimo mensaje en la conversaci√≥n
        setConversations((prev) => {
          return prev.map((conv) => {
            if (conv.id === chatId) {
              return {
