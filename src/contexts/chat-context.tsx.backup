          });
        }

        console.log('‚úÖ ChatContext: Notificaci√≥n procesada directamente (sin API)');
      }
    },
    [selectedConversation, getCurrentUserId],
  );

  /**
   * Efecto para manejar notificaciones WebSocket (SIMPLE)
   */
  useEffect(() => {
    console.log("üîç ChatContext: useEffect ejecutado, notificaciones:", websocketNotifications.length);

    if (websocketNotifications.length > 0) {
      const latestNotification = websocketNotifications[0];
      console.log("üîç ChatContext: Notificaci√≥n recibida:", latestNotification);

