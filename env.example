# ===========================================
# Squat Fit Dashboard - Variables de Entorno
# ===========================================

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Nombre de la aplicación
APP_NAME=Squat Fit Dashboard

# Versión de la aplicación
APP_VERSION=1.0.0

# Entorno de ejecución
NODE_ENV=development

# URL base de la aplicación
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DEL BACKEND
# ===========================================

# URL base de la API del backend
API_URL=https://squatfit-api-cyrc2g3zra-no.a.run.app

# Versión de la API
API_VERSION=v1

# Timeout para las peticiones a la API (en milisegundos)
API_TIMEOUT=10000

# ===========================================
# AUTENTICACIÓN Y SEGURIDAD
# ===========================================

# Clave secreta para NextAuth (generar con: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Clave para encriptar tokens en cookies
COOKIE_SECRET=your-cookie-secret-here-change-in-production

# ===========================================
# CONFIGURACIÓN DE COOKIES
# ===========================================

# Dominio para las cookies
COOKIE_DOMAIN=localhost

# Ruta para las cookies
COOKIE_PATH=/

# Configuración de cookies seguras
COOKIE_SECURE=false

# Configuración de cookies httpOnly
COOKIE_HTTPONLY=true

# ===========================================
# CONFIGURACIÓN DE ANALYTICS
# ===========================================

# Google Analytics ID (opcional)
GA_ID=

# Sentry DSN para error tracking (opcional)
SENTRY_DSN=

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Habilitar logs detallados en desarrollo
DEBUG=true

# URL para desarrollo local
DEV_URL=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# URL de producción
PROD_URL=https://dashboard.squatfit.com

# ===========================================
# CONFIGURACIÓN DE FEATURES
# ===========================================

# Habilitar modo de mantenimiento
MAINTENANCE_MODE=false

# Habilitar modo de desarrollo
DEV_MODE=true

# Habilitar logs de performance
PERFORMANCE_LOGGING=false

# ===========================================
# CONFIGURACIÓN DE TESTING
# ===========================================

# URL de la API para testing
TEST_API_URL=https://squatfit-api-test-cyrc2g3zra-no.a.run.app

# Habilitar modo de testing
TEST_MODE=false

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Habilitar monitoreo de errores
ERROR_MONITORING=true

# Habilitar monitoreo de performance
PERFORMANCE_MONITORING=true

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================

# Tiempo de cache para datos estáticos (en segundos)
STATIC_CACHE_TIME=3600

# Tiempo de cache para datos dinámicos (en segundos)
DYNAMIC_CACHE_TIME=300

# ===========================================
# CONFIGURACIÓN DE UPLOADS
# ===========================================

# Tamaño máximo de archivos (en bytes)
MAX_FILE_SIZE=5242880

# Tipos de archivo permitidos
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ===========================================

# Habilitar notificaciones push
PUSH_NOTIFICATIONS=false

# Clave pública para notificaciones push (opcional)
VAPID_PUBLIC_KEY=

# ===========================================
# CONFIGURACIÓN DE WEBSOCKETS
# ===========================================

# URL del servidor WebSocket (opcional)
WS_URL=wss://squatfit-api-cyrc2g3zra-no.a.run.app

# Habilitar conexiones WebSocket
WS_ENABLED=false

# ===========================================
# CONFIGURACIÓN DE SEO
# ===========================================

# Título por defecto de la aplicación
DEFAULT_TITLE=Squat Fit Dashboard

# Descripción por defecto de la aplicación
DEFAULT_DESCRIPTION=Dashboard administrativo moderno para la gestión de Squat Fit

# URL canónica de la aplicación
CANONICAL_URL=https://dashboard.squatfit.com

# ===========================================
# CONFIGURACIÓN DE REDES SOCIALES
# ===========================================

# URL de la imagen para redes sociales
SOCIAL_IMAGE_URL=https://dashboard.squatfit.com/og-image.png

# Twitter handle (opcional)
TWITTER_HANDLE=@squatfit

# ===========================================
# CONFIGURACIÓN DE SOPORTE
# ===========================================

# Email de soporte
SUPPORT_EMAIL=soporte@squatfit.com

# WhatsApp de soporte
SUPPORT_WHATSAPP=+1234567890

# URL de documentación
DOCS_URL=https://docs.squatfit.com

# ===========================================
# CONFIGURACIÓN DE INTEGRACIONES
# ===========================================

# Stripe Public Key (opcional)
STRIPE_PUBLISHABLE_KEY=

# Google Maps API Key (opcional)
GOOGLE_MAPS_API_KEY=

# Recaptcha Site Key (opcional)
RECAPTCHA_SITE_KEY=

# ===========================================
# CONFIGURACIÓN DE FEATURES ESPECÍFICOS
# ===========================================

# Habilitar modo oscuro por defecto
DARK_MODE_DEFAULT=false

# Habilitar animaciones
ANIMATIONS_ENABLED=true

# Habilitar sonidos de notificación
NOTIFICATION_SOUNDS=false

# Habilitar modo de accesibilidad
ACCESSIBILITY_MODE=false

# ===========================================
# CONFIGURACIÓN DE DESARROLLO ESPECÍFICO
# ===========================================

# Habilitar React DevTools en producción (solo para debugging)
ENABLE_DEVTOOLS=false

# Habilitar logs de Redux (solo en desarrollo)
REDUX_LOGGER=false

# Habilitar modo de desarrollo de componentes
COMPONENT_DEV_MODE=false

# ===========================================
# CONFIGURACIÓN DE DEPLOYMENT
# ===========================================

# URL de la aplicación en producción
APP_URL=https://dashboard.squatfit.com

# URL de la API en producción
PROD_API_URL=https://squatfit-api-cyrc2g3zra-no.a.run.app

# ===========================================
# CONFIGURACIÓN DE MONITOREO ESPECÍFICO
# ===========================================

# Habilitar logs de autenticación
AUTH_LOGGING=true

# Habilitar logs de navegación
NAVIGATION_LOGGING=false

# Habilitar logs de errores de usuario
USER_ERROR_LOGGING=true

# ===========================================
# CONFIGURACIÓN DE BACKUP Y RECUPERACIÓN
# ===========================================

# Habilitar backup automático de datos
AUTO_BACKUP=false

# Frecuencia de backup (en horas)
BACKUP_FREQUENCY=24

# ===========================================
# CONFIGURACIÓN DE MANTENIMIENTO
# ===========================================

# Habilitar modo de mantenimiento
MAINTENANCE_ENABLED=false

# Mensaje de mantenimiento
MAINTENANCE_MESSAGE=Estamos realizando mejoras. Volveremos pronto.

# URL de redirección durante mantenimiento
MAINTENANCE_REDIRECT_URL=

# ===========================================
# CONFIGURACIÓN DE VERSIONES
# ===========================================

# Versión de la API del backend
BACKEND_API_VERSION=v1

# Versión mínima del frontend requerida
MIN_FRONTEND_VERSION=1.0.0

# Versión mínima del backend requerida
MIN_BACKEND_VERSION=1.0.0

# ===========================================
# CONFIGURACIÓN DE IDIOMAS
# ===========================================

# Idioma por defecto
DEFAULT_LOCALE=es

# Idiomas soportados
SUPPORTED_LOCALES=es,en

# ===========================================
# CONFIGURACIÓN DE ZONA HORARIA
# ===========================================

# Zona horaria por defecto (Madrid, España)
DEFAULT_TIMEZONE=Europe/Madrid

# Formato de fecha por defecto
DATE_FORMAT=dd/MM/yyyy

# Formato de hora por defecto
TIME_FORMAT=HH:mm

# ===========================================
# CONFIGURACIÓN DE VALIDACIÓN
# ===========================================

# Habilitar validación estricta de formularios
STRICT_VALIDATION=true

# Habilitar validación en tiempo real
REALTIME_VALIDATION=true

# ===========================================
# CONFIGURACIÓN DE CACHE ESPECÍFICO
# ===========================================

# Tiempo de cache para datos de usuario (en segundos)
USER_CACHE_TIME=1800

# Tiempo de cache para datos de configuración (en segundos)
CONFIG_CACHE_TIME=3600

# Tiempo de cache para datos de navegación (en segundos)
NAVIGATION_CACHE_TIME=900

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD ESPECÍFICA
# ===========================================

# Habilitar validación de CSRF
CSRF_PROTECTION=true

# Habilitar validación de XSS
XSS_PROTECTION=true

# Habilitar validación de SQL Injection
SQL_INJECTION_PROTECTION=true

# ===========================================
# CONFIGURACIÓN DE PERFORMANCE
# ===========================================

# Habilitar lazy loading de imágenes
LAZY_LOAD_IMAGES=true

# Habilitar compresión de imágenes
IMAGE_COMPRESSION=true

# Habilitar cache de imágenes
IMAGE_CACHE=true

# ===========================================
# CONFIGURACIÓN DE ACCESIBILIDAD
# ===========================================

# Habilitar modo de alto contraste
HIGH_CONTRAST_MODE=false

# Habilitar navegación por teclado
KEYBOARD_NAVIGATION=true

# Habilitar lectores de pantalla
SCREEN_READER_SUPPORT=true

# ===========================================
# CONFIGURACIÓN DE EXPERIMENTOS
# ===========================================

# Habilitar modo experimental
EXPERIMENTAL_MODE=false

# Habilitar features beta
BETA_FEATURES=false

# Habilitar modo de desarrollo avanzado
ADVANCED_DEV_MODE=false 